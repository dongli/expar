<div class="row">
	<div class="small-6 small-centered columns"><p>
		<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  		<%= devise_error_messages! %>

  		<div class="row collapse">
      	<div class="small-4 columns"><%= f.label :email, class: "right inline" %></div>
   	  	<div class="small-8 columns"><%= f.text_field :email, autofocus: true  %></div>
 	    </div>

 	    <div class="row collapse">
      	<div class="small-4 columns"><%= f.label :password, class: "right inline" %></div>
   	  	<div class="small-8 columns"><%= f.password_field :password, autocomplete: "off"  %></div>
 	    </div>

 	    <div class="row collapse">
      	<div class="small-4 columns"><%= f.label :password_confirmation, class: "right inline" %></div>
   	  	<div class="small-8 columns"><%= f.password_field :password_confirmation, autocomplete: "off"  %></div>
 	    </div>

 	    <div class="row">
      	<div class="small-offset-6 columns">
  	  		<%= f.submit "Register", class: "button radius" %>
      	</div>
	  	</div>
		<% end %>
	</p><div>
</div>
