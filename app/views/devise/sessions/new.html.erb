<div class="row"><p>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="small-12 large-6 small-centered columns">
        <%= f.text_field :email, placeholder: 'Email', autofocus: true  %>
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off"  %>
    </div>
	
    <% if devise_mapping.rememberable? -%>
  	  <div class="small-12 large-6 large-offset-3 columns"><%= f.check_box :remember_me %><%= f.label :remember_me %></div>
  	<% end %>

    <div class="small-12 large-6 small-centered columns">
	  	<%= f.submit "Log in", class: "button radius" %>
	  	or
	  	<%= link_to "Register", new_registration_path(resource_name), class: "button radius" %><br>
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  <% end %>
</p></div>
