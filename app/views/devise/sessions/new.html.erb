<div class="row">
  <div class="small-12 medium-6 small-centered columns">
    <p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <%= f.text_field :email, placeholder: 'Email', autofocus: true  %>
        <%= f.password_field :password, placeholder: 'Password', autocomplete: "off"  %>
        <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %><%= f.label :remember_me %><br>
        <% end %>
        <%= f.submit "Log in", class: "button radius" %>
        <%= link_to "Register", new_registration_path(resource_name), class: "button radius" %><br>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %>
      <% end %>
    </p>
  </div>
</div>
