<div class="row">
  <div class="small-6 small-centered columns"><p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    	<%= devise_error_messages! %>

	    <div class="row collapse">
      	<div class="small-3 columns"><%= f.label :email, class: "right inline" %></div>
   	  	<div class="small-9 columns"><%= f.text_field :email, autofocus: true  %></div>
 	    </div>

      <div class="row collapse">
      	<div class="small-3 columns"><%= f.label :password, class: "right inline" %></div>
   	  	<div class="small-9 columns"><%= f.password_field :password, autocomplete: "off"  %></div>
 	    </div>
	
      <% if devise_mapping.rememberable? -%>
				<div class="row collapse">
    	  	<div class="small-9 small-offset-3 columns"><%= f.check_box :remember_me %><%= f.label :remember_me %></div>
	    	</div>
	  	<% end %>
	
	  	<div class="row">
      	<div class="small-9 small-offset-3 columns">
  	  		<%= f.submit "Log in", class: "button radius" %>
  	  		or
  	  		<%= link_to "Register", new_registration_path(resource_name), class: "button radius" %><br>
        	<%= link_to "Forgot your password?", new_password_path(resource_name) %>
      	</div>
	  	</div>
	  <% end %>
  </p></div>
</div>
