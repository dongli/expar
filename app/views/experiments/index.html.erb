<h1>All experiments</h1>

<div class="row">
  <table>
    <thead>
      <tr>
        <th width="200">Title</th>
        <th width="200">Model</th>
        <th width="400">Comment</th>
        <th width="200">Contact</th>
      </tr>
    </thead>
    <tbody>
      <% @experiments.each do |e| %>  
        <tr>
          <td><%= link_to "#{e.title}", experiment_path(e) %></td>
          <td><%= e.model %></td>
          <td><%= e.comment %></td>
          <td><a href="mailto:<%= e.mail %>"><%= e.author %></a></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'New experiment', new_experiment_path, class: "button radius" %>
