<div class="row">
  <div class="small-12 small-centered columns">
    <p>
      <table>
        <thead>
          <tr>
            <th width="200">Title</th>
            <th width="200">Model</th>
            <th width="400">Comment</th>
            <th width="200">Contact</th>
          </tr>
        </thead>
        <tbody>
          <% @experiments.each do |e| %>
            <tr>
              <td><%= link_to "#{e.title}", experiment_path(e) %></td>
              <td><%= e.model %></td>
              <td><%= e.comment %></td>
              <td><a href="mailto:<%= e.email %>"><%= e.author %></a></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </p>
    <% if can? :create, Experiment %>
      <p>
        <span data-tooltip data-options="disable_for_touch:true" class="has-tip" title="Create an new experiment.">
          <a href="<%= new_experiment_path %>", class="button radius">
            <i class="fa fa-plus-square"></i>
          </a>
        </span>
      </p>
    <% end %>
  </div>
</div>
